<h1>
  <i class="bi bi-person-circle"></i>
  My Profile
</h1>

<form {{on "submit" this.submitForm}} class="mt-4">
  <div class="mb-3 input-group">
    <span class="input-group-text">
      <i class="bi bi-person"></i>
    </span>
    <input
      type="text"
      id="firstName"
      class="form-control"
      placeholder="First Name"
      value={{this.nom}}
      {{on "input" this.updateNom}}
      required
    />
  </div>

  <div class="mb-3 input-group">
    <span class="input-group-text">
      <i class="bi bi-person"></i>
    </span>
    <input
      type="text"
      id="lastName"
      class="form-control"
      placeholder="Last Name"
      value={{this.prenom}}
      {{on "input" this.updatePrenom}}
      required
    />
  </div>

  <div class="mb-3 input-group">
    <span class="input-group-text">
      <i class="bi bi-geo-alt"></i>
    </span>
    <input
      type="text"
      id="address"
      class="form-control"
      placeholder="Address"
      value={{this.adresse}}
      {{on "input" this.updateAdresse}}
      required
    />
  </div>

  <div class="mb-3 input-group">
    <span class="input-group-text">
      <i class="bi bi-file-text"></i>
    </span>
    <input
      type="text"
      id="vatNumber"
      class="form-control"
      placeholder="TVA Number"
      value={{this.tva}}
      {{on "input" this.updateTva}}
      required
    />
  </div>

  <div class="mb-3 input-group">
    <span class="input-group-text">
      <i class="bi bi-gender-ambiguous"></i>
    </span>
    <select
      id="gender"
      class="form-select"
      value={{this.genre}}
      {{on "change" this.updateGenre}}
      required
    >
      <option value="" disabled>Select your gender</option>
      <option value="male">Male</option>
      <option value="female">Female</option>
      <option value="other">Other</option>
    </select>
  </div>

  <div class="mb-3 input-group">
    <span class="input-group-text">
      <i class="bi bi-heart"></i>
    </span>
    <select
      id="maritalStatus"
      class="form-select"
      value={{this.situation}}
      {{on "change" this.updateSituation}}
      required
    >
      <option value="" disabled>Select your marital status</option>
      <option value="single">Single</option>
      <option value="married">Married</option>
      <option value="divorced">Divorced</option>
      <option value="widowed">Widowed</option>
    </select>
  </div>

  <div class="mb-3 input-group">
    <span class="input-group-text">
      <i class="bi bi-image"></i>
    </span>
    <input
      type="file"
      id="avatar"
      class="form-control"
      {{on "change" this.previewAvatar}}
    />
    {{#if this.avatarPreview}}
      <img
        src={{this.avatarPreview}}
        alt="Avatar preview"
        class="img-thumbnail mt-3"
        width="75"
      />
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary">
    <i class="bi bi-save"></i>
    Save
  </button>
</form>